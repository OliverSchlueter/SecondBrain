<Window x:Class="DesktopApp.ui.NewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DesktopApp.ui"
        mc:Ignorable="d"
        Title="New Category" 
        MinHeight="100"
        Height="150"
        MaxHeight="150"
        Width="350"
        MinWidth="350"
        MaxWidth="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <StackPanel>
        <Label Name="LabelHeadline"
               Content="Create new sub-category in"
               FontSize="15"
               FontWeight="Bold"
               Margin="0 0 0 7"/>
        <StackPanel 
            Orientation="Horizontal"
            Margin="0 0 0 10">
            <Label
                Content="Name"
                FontSize="12"/>
            <TextBox Name="TextBoxName"
                Width="200"
                VerticalAlignment="Center"
                MaxLength="16"/>
        </StackPanel>
        <Button Name="ButtonCreate"
            Content="Create"
            Width="100" 
            HorizontalAlignment="Left"
            Margin="10 0 0 0"
            Cursor="Hand"
            Click="ButtonCreate_OnClick"/>
    </StackPanel>
</Window>
